<?xml version="1.0" encoding="utf-8"?>
<com.example.videoapp.view.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ff3097fd"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView

        android:id="@+id/tv_seache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/search_bg_selector"
        android:drawableLeft="@drawable/search_left"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:text="搜索"
        android:textColor="@drawable/search_textcolor_selector" />

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/iv_game"
            android:drawableLeft="@drawable/ic_topbanner_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignRight="@id/iv_game"
            android:background="@drawable/do_game"
            android:layout_width="6dp"
            android:layout_height="6dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_user"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/iv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</com.example.videoapp.view.TitleBar>