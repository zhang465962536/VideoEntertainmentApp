<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton


            android:id="@+id/rb_localvideo"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/rb_video_selector"
            android:text="本地视频" />

        <RadioButton


            android:id="@+id/rb_localmusic"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/rb_music_selector"
            android:text="本地音乐" />

        <RadioButton


            android:id="@+id/rb_netvideo"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/rb_netvideo_selector"
            android:text="网络视频" />

        <RadioButton

            android:id="@+id/rb_nethot"

            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/rb_nethot_selector"
            android:text="网络看点" />

    </RadioGroup>


</LinearLayout>